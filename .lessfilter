#!/bin/sh

case "$1" in
    *.yaml|?akefile|*.json|*.awk|*.groff|*.js|*.m4|*.php|*.pl|*.pm|*.pod|*.sh|\
    *.lsp|*.l|*.pas|*.p|*.axp|*.ppd|*.pov|\
    *.diff|*.patch|*.rb|*.sql|*.ebuild|*.eclass|*.md)
        pygmentize -f 256 "$1";;
    *.ad[asb]|*.asm|*.inc|*.[ch]|*.[ch]pp|*.[ch]xx|*.cc|*.hh)
	pygmentize -O style=monokai -f 256 -l c "$1";;
    *.java)
	pygmentize -O style=monokai -f 256 -l java "$1";;
    *.py)
	pygmentize -O style=monokai -f 256 -l python "$1";;
    *.xml|*.xps|*.xsl)
	pygmentize -O style=monokai -f 256 -l xml "$1";;
    .bashrc|.bash_aliases|.bash_environment)
        pygmentize -f 256 -l sh "$1"
        ;;
    *)
        grep "#\!/bin/bash" "$1" > /dev/null
        if [ "$?" -eq "0" ]; then
            pygmentize -f 256 -l sh "$1"
        else
            exit 1
        fi
esac

exit 0
